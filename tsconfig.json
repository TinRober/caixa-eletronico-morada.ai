{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    // Diretórios de entrada e saída
    "rootDir": "src",
    "outDir": "dist",

    // Ambiente da aplicação
    "module": "commonjs",
    "target": "ES2020",
    "esModuleInterop": true,

    // Tipos reconhecidos pelo TypeScript (APENAS runtime)
    "types": ["node"],

    // Geração de arquivos adicionais
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Configurações de verificação estrita
    "strict": true,
    "isolatedModules": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true
  },

  // Apenas código de produção
  "include": ["src"],

  "exclude": [
    "node_modules",
    "dist",
    "__tests__"
  ]
}
